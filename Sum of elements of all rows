#include<stdio.h>
int main()
{
	int i,j,a[3][3];
	printf("Enter elements for a 3*3 matrix \n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("Matrix A \n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf(" %d ",a[i][j]);
		}
		printf("\n");
	}
	int sum1=0;
	for(i=0;i<1;i++)
	{
		for(j=0;j<3;j++)
		{
			sum1+=a[i][j];
		}
	}
	int sum2=0;
	for(i=1;i<2;i++)
	{
		for(j=0;j<3;j++)
		{
			sum2+=a[i][j];
		}
	}
	int sum3=0;
	for(i=2;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			sum3+=a[i][j];
		}
	}
	printf("Sum of elements of first row is %d\n",sum1);
	printf("Sum of elements of second row is %d\n",sum2);
	printf("Sum of elements of third row is %d\n",sum3);
}
