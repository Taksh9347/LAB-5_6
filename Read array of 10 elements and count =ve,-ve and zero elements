
#include<stdio.h>
int main()
{
	int i,positive,negative,zero,a[10];
	printf("Enter 10 elements for the array \n");
	for(i=1;i<=10;i++)
	{
		scanf("%d",&a[i]);
	}
	positive=0,negative=0,zero=0;
	for(i=1;i<=10;i++)
	{
		if(a[i]>0)
		{
			positive++;
		}
		else if(a[i]<0)
		{
			negative++;
		}
		else
		{
			zero++;
		}
	}
	printf("\n");
	printf("%d are positive elements\n",positive);
	printf("%d are negative elements\n",negative);
	printf("%d are zero elements",zero);
}
